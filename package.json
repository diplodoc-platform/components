{
  "name": "@diplodoc/components",
  "description": "React components for drawing Diplodoc documentation",
  "author": "YFM Team <yfm-team@yandex.ru>",
  "license": "MIT",
  "version": "5.0.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:diplodoc-platform/components.git"
  },
  "files": [
    "build",
    "src/i18n"
  ],
  "engines": {
    "node": ">=22",
    "npm": ">=11.5.1"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./build/esm/index.d.js",
        "style": "./build/index.css",
        "default": "./build/esm/index.js"
      },
      "require": {
        "types": "./build/cjs/index.d.js",
        "style": "./build/index.css",
        "default": "./build/cjs/index.js"
      },
      "default": {
        "types": "./build/esm/index.d.js",
        "style": "./build/index.css",
        "default": "./build/esm/index.js"
      }
    },
    "./styles": "./build/index.css",
    "./i18n/*": "./src/i18n/*",
    "./themes/*": {
      "style": "./build/themes/*/index.css",
      "default": "./build/themes/*/index.css"
    }
  },
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "main": "build/esm/index.js",
  "typings": "build/esm/index.d.ts",
  "scripts": {
    "deps:install": "npm ci",
    "deps:truncate": "npm prune --production",
    "typecheck": "tsc -p . --noEmit",
    "test": "exit 0",
    "playwright:install": "playwright install chromium webkit firefox --with-deps",
    "playwright": "playwright test --config=playwright/playwright.config.ts",
    "playwright:update": "npm run playwright -- -u",
    "playwright:clear-cache": "rm -rf ./playwright/.cache",
    "playwright:local": "SKIP_WEBSERVER=true playwright test --config=playwright/playwright.config.ts",
    "playwright:local:update": "SKIP_WEBSERVER=true npm run playwright -- -u",
    "playwright:docker": "./playwright/playwright-docker.sh npm run playwright --",
    "playwright:docker:update": "./playwright/playwright-docker.sh npm run playwright:update --",
    "playwright:docker:clear-cache": "./playwright/playwright-docker.sh clear-cache",
    "playwright:docker:dev": "./playwright/playwright-docker.sh 'BROWSER=true npm run dev'",
    "playwright:docker:windows": "./playwright/playwright-docker-windows.sh",
    "dev": "run-s build _dev:watch",
    "_dev:watch": "run-p _build:watch _storybook:watch",
    "build:clean": "rm -rf build",
    "build:compile": "node esbuild/build.js",
    "_build:declarations:esm": "tsc --emitDeclarationOnly -p tsconfig.esm.json",
    "_build:declarations:cjs": "tsc --emitDeclarationOnly -p tsconfig.cjs.json",
    "build": "run-s build:clean build:compile _build:declarations:*",
    "_build:watch": "node esbuild/build.js --watch",
    "_storybook:watch": "cd demo && npm run storybook",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "postinstall": "cd demo && npm i || true",
    "lint": "lint update && lint",
    "lint:fix": "lint update && lint fix",
    "pre-commit": "lint update && lint-staged",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@gravity-ui/components": "^4.16.0",
    "@gravity-ui/icons": "^2.5.0",
    "@gravity-ui/page-constructor": "^7.21.0",
    "@gravity-ui/uikit": "^7.26.0",
    "@popperjs/core": "^2.11.2",
    "bem-cn-lite": "4.1.0",
    "clsx": "^2.1.1",
    "hoist-non-react-statics": "^3.3.2",
    "i18next": "^24.2.2",
    "isomorphic-dompurify": "^2.20.0",
    "langs": "^2.0.0",
    "lodash": "^4.17.21",
    "mark.ts": "^1.0.5",
    "react-gtm-module": "^2.0.11",
    "react-helmet": "^6.1.0",
    "react-hotkeys-hook": "^4.6.1",
    "react-i18next": "^15.4.0",
    "react-popper": "^2.3.0",
    "react-recompose": "^0.33.0",
    "react-transition-group": "^4.4.5",
    "scroll-into-view-if-needed": "^3.1.0",
    "url": "^0.11.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0 || >=17.0.0 || >=18.0.0 || >=19.0.0",
    "react-dom": ">=16.8.0 || >=17.0.0 || >=18.0.0 || >=19.0.0"
  },
  "devDependencies": {
    "@diplodoc/lint": "^1.1.1",
    "@diplodoc/tsconfig": "^1.0.2",
    "@playwright/test": "^1.48.2",
    "@types/hoist-non-react-statics": "^3.3.6",
    "@types/langs": "^2.0.1",
    "@types/lodash": "4.14.179",
    "@types/node": "^22.9.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/react-gtm-module": "^2.0.3",
    "@types/react-helmet": "^6.1.11",
    "@types/react-recompose": "^0.33.6",
    "@types/react-transition-group": "^4.4.10",
    "autoprefixer": "^10.4.15",
    "esbuild": "^0.23.1",
    "esbuild-sass-plugin": "^3.3.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.28",
    "postcss-preset-env": "^9.1.2",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.80.6",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "markdown",
    "docs",
    "yfm",
    "md",
    "documentation",
    "tool",
    "tools",
    "components",
    "diplodoc"
  ]
}
