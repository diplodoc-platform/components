{
  "extends": "@diplodoc/tsconfig/tsconfig",
  "compilerOptions": {
    "lib": ["DOM", "ES2017"],
    "module": "ESNext",
    "allowJs": false,
    "importHelpers": true,
    // "resolveJsonModule": true,
    "declaration": true,
    "jsx": "react",
    "target": "ESNext",
    "baseUrl": "."
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "demo/**/*.ts",
    "demo/**/*.tsx",
    "demo/.storybook/**/*.ts",
    "demo/.storybook/**/*.tsx"
  ]
}
