{
  "extends": "@diplodoc/tsconfig/tsconfig",
  "compilerOptions": {
    "lib": ["DOM", "ES2017"],
    "module": "ESNext",
    "allowJs": false,
    "importHelpers": true,
    "resolveJsonModule": true,
    "declaration": true,
    "jsx": "react",
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@diplodoc/components": ["./"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "playwright/playwright.config.ts"],
  "exclude": ["demo"]
}
